#include <stdio.h>
#include <stdlib.h>
#include <string.h>

#include "uncompress.h"

int main(int argc, char** argv)
{
	FILE* input = fopen(argv[1], "rb");
	
	size_t sizeNameInput = strlen(argv[1]);
	char* nameOutput;
	if (argc >= 3)
		nameOutput = argv[2];
	else
	{
		nameOutput = malloc((sizeNameInput+2)*sizeof(char));
	
		strncpy(nameOutput, argv[1], sizeNameInput - strlen(".hf"));
		nameOutput[sizeNameInput - strlen(".hf")] = '\0';
		strcat(nameOutput, ".nhf");
	}
	
	FILE* output = fopen(nameOutput, "w");
	
	if (argc < 3)
		free(nameOutput);
		
	uncompress(input, output);
	
	fclose(input);
	fclose(output);
	
	printf("Decompression terminÃ©e avec succes\n");
	return 0;
}
