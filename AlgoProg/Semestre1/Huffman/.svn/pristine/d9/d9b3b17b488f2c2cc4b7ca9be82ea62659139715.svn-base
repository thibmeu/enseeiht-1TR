CC=gcc
CFLAGS= -std=c99 -g -Wall -pedantic
LDFLAGS= -std=c99 -g -Wall -pedantic
# -ansi 
#
GENERES =	\


EXE =	\
	compress	\
	uncompress	\
	

all:: ${GENERES} $(EXE)
	make tar

compress: couple.o byte.o list.o binary.o tree.o compress.o
	$(CC) $(LDFLAGS) -o $@ $^

uncompress: couple.o byte.o list.o binary.o tree.o uncompress.o
	$(CC) $(LDFLAGS) -o $@ $^


#Tests files

tests-list: list.o tests-list.o
	$(CC) $(LDFLAGS) -o $@ $^

couple.o: couple.h
byte.o: byte.h
list.o: list.h
binary.o: binary.h
tree.o: tree.h
compress.o: compress.h
uncompress.o: uncompress.h
tests-list.o: tests-list.c


clean::
	rm -f *.o
	rm -f ${GENERES}
	rm -f $(EXE) a.out

force::
	make clean
	make all

tar::
	tar czvf livrables/sources.tgz *.* Makefile
