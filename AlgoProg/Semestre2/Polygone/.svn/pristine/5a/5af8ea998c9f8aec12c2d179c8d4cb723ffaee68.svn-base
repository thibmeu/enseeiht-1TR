import static org.junit.Assert.*;

import org.junit.Before;
import org.junit.Test;

/**
 * Tests permettant de vérifier les exigences et contraintes exprimées dans le
 * sujet.
 *
 * @author	Thibault Meunier
 * @version	1
 */
public class CreerRectangleTest {
	
	private Point a;
	private Point b;
	private Point c;
	private Point d;
	
	@Before public void setUp(){
		a = new Point(0, 0);
		b = new Point(2, 0);
		c = new Point(2, 1);
		d = new Point(0, 1);
	}
	
	@Test public void testCreerRectangle() {
		//Un rectangle quelconque
		Polygone rectangle1 = Polygone.creerRectangle(a, c);
		Polygone abcd1 = new Polygone(a, b, c, d);
		assertEquals("Il manque des points au rectangle", rectangle1.getOrdre(), abcd1.getOrdre());
		assertEquals("Les coordonnees ne sont pas valides", rectangle1.toString(), abcd1.toString());
		
		//Un rectangle point
		Polygone rectangle2 = Polygone.creerRectangle(a, a);
		Polygone abcd2 = new Polygone(a, a, a, a);
		assertEquals("Il manque des points au rectangle", rectangle2.getOrdre(), abcd2.getOrdre());
		assertEquals("Les coordonnees ne sont pas valides", rectangle2.toString(), abcd2.toString());
	}
	
	public static void main(String[] args) {
		org.junit.runner.JUnitCore.main(CreerRectangleTest.class.getName());
	}
	
}
