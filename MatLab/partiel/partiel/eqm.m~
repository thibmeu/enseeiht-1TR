function [ePb,eeqm,evar] = eqm(p, mu, sigma)
q = 1-p;
nSimu = 3000;
nGenere = 10;
v = 1;
s = 2*v*(rand(nSimu, nGenere) < q) - v;
n = randn(nSimu, nGenere) * sqrt(sigma) + mu;
r = s + n;
seuil = sigma*log(p/q)/4;
signal = mean(s < sigma*log(p/q)/4 & r > sigma*log(p/q)/4,2) + mean(s > sigma*log(p/q)/4 & r < sigma*log(p/q)/4,2);

eeqm = var(signal)/(mean(signal)^2);
evar = var(signal);
ePb = mean(signal);
end